# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Upbit API Configuration
UPBIT_API_URL=https://api.upbit.com/v1
UPBIT_WS_URL=wss://api.upbit.com/websocket/v1

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_MAX_REQUESTS=50
WS_RATE_LIMIT_MAX_REQUESTS=200

# AI Model Configuration
AI_MODEL_CACHE_TTL=3600000
AI_PREDICTION_TIMEOUT=30000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=10000

# Cron Jobs
ENABLE_CRON_JOBS=true
DATA_CLEANUP_SCHEDULE="0 0 * * *"
MODEL_UPDATE_SCHEDULE="0 * * * *"

# Security
HELMET_ENABLED=true
CORS_ENABLED=true
COMPRESSION_ENABLED=true

# Performance
BODY_PARSER_LIMIT=10mb
QUERY_PARSER_LIMIT=1000

# Monitoring
HEALTH_CHECK_INTERVAL=300000
MEMORY_WARNING_THRESHOLD=500000000
